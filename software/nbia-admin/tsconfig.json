{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",

    "skipLibCheck": true,

    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types/jquery",
      "node_modules/@types/jquery",
        "./node_modules/@types",
        "./@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
      "paths": {
          "@assets/*": [
              "src/assets/*"
          ],
          "@app/*": [
              "src/app/*"
          ],
          "@env": [
              "environments/environment"
          ],
          "@pages/*": [
              "pages/*"
          ],
          "@theme/*": [
              "theme/*"
          ]
      }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
