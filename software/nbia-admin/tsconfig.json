{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types/jquery",
      "node_modules/@types/jquery",
      "./node_modules/@types",
      "./@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@env": [
        "environments/environment"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@theme/*": [
        "theme/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
