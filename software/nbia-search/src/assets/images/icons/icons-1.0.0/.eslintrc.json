{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": "eslint:recommended",
  "rules": {
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "prefer-template": "error",
    "semi": [
      "error",
      "never"
    ]
  }
}
